									a = document.links; for (i in a) { a[i].onmouseover = function () { clrOrg = this.style.color; aZ = this; TimerID = setInterval(time, 100) }; a[i].onmouseout = function () { clearInterval(TimerID); this.style.color = clrOrg } }; a = document.links; for (i in a) { a[i].onmouseover = function () { clrOrg = this.style.color; aZ = this; TimerID = setInterval(time, 100) }; a[i].onmouseout = function () { clearInterval(TimerID); this.style.color = clrOrg } }; function time() { aZ.style.color = makeColor() }; function makeColor() { if (eS == 0) { eR = eV; eG = eV; eB = eV } else { t1 = eV; t2 = (255 - eS) * eV / 255; t3 = eH % 60; t3 = (t1 - t2) * t3 / 60; if (eH < 60) { eR = t1; eB = t2; eG = t2 + t3 } else if (eH < 120) { eG = t1; eB = t2; eR = t1 - t3 } else if (eH < 180) { eG = t1; eR = t2; eB = t2 + t3 } else if (eH < 240) { eB = t1; eR = t2; eG = t1 - t3 } else if (eH < 300) { eB = t1; eG = t2; eR = t2 + t3 } else if (eH < 360) { eR = t1; eG = t2; eB = t1 - t3 } else { eR = 0; eG = 0; eB = 0 } } eR = Math.floor(eR); eG = Math.floor(eG); eB = Math.floor(eB); clrRGB = '#' + eR.toString(16) + eG.toString(16) + eB.toString(16); eH = eH + rate; if (eH >= 360) eH = 0; return clrRGB; }
